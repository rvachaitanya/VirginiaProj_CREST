xa-data-source add --name=cresthr \
  --jndi-name=java:/jdbc/datasources/cresthr \
  --user-name=cresthr \
  --password=cresthr \
  --driver-name=postgresql.jar \
  --transaction-isolation=TRANSACTION_READ_COMMITTED \
  --validate-on-match=true \
  --max-pool-size=${env.DB_MAX_POOL_SIZE:50} \
  --xa-datasource-class=org.postgresql.xa.PGXADataSource \
  --xa-datasource-properties=ServerName=postgresql,PortNumber=5432,DatabaseName=cresthr \
  --valid-connection-checker-class-name=org.jboss.jca.adapters.jdbc.extensions.postgres.PostgreSQLValidConnectionChecker \
  --exception-sorter-class-name=org.jboss.jca.adapters.jdbc.extensions.postgres.PostgreSQLExceptionSorter